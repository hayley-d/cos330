<div class="min-h-screen flex">
  <div class="hidden md:flex w-1/2">
    <%= image_tag "login-bg.jpg", class: "object-cover w-full h-full" %>
  </div>

  <div class="flex w-full md:w-1/2 items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded shadow-md w-96">
      <h1 class="text-2xl font-bold mb-6">Login</h1>

      <%= form_with url: login_path, method: :post, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
        </div>

        <div class="mb-4">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
        </div>

        <%= f.submit "Login", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
      <% end %>
      <p class="mt-4 text-sm text-gray-600">
        Donâ€™t have an account?
        <%= link_to "Sign up", register_path, class: "text-blue-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>
