<div class="min-h-screen flex">
  <div class="hidden md:flex w-1/2">
    <%= image_tag "login-bg.jpg", class: "object-cover w-full h-full" %>
  </div>

  <div class="flex w-full md:w-1/2 items-center justify-center bg-pink-50">
    <div class="bg-white p-8 rounded-2xl shadow-lg border border-pink-200 w-96">
      <h1 class="text-3xl font-extrabold mb-6 text-pink-600 text-center">Login</h1>

      <%= form_with url: login_path, method: :post, local: true do |f| %>
        <div class="mb-4">
          <%= f.label :email, "Email", class: "block text-sm font-semibold text-pink-700 mb-1" %>
          <%= f.text_field :email,
                           class: "mt-1 block w-full border border-pink-300 rounded-md p-3
                        focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>
        </div>

        <div class="mb-6">
          <%= f.label :password, "Password", class: "block text-sm font-semibold text-pink-700 mb-1" %>
          <%= f.password_field :password,
                               class: "mt-1 block w-full border border-pink-300 rounded-md p-3
                        focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>
        </div>

        <%= f.submit "Login",
                     class: "w-full bg-pink-500 text-white py-2 rounded-lg shadow hover:bg-pink-600 transition" %>
      <% end %>

      <p class="mt-4 text-sm text-center text-gray-700">
        Donâ€™t have an account?
        <%= link_to "Register", register_path, class: "text-pink-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>
