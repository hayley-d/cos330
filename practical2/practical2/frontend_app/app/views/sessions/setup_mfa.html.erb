<div class="min-h-screen flex items-center justify-center bg-pink-50">
  <div class="bg-white p-8 rounded-2xl shadow-lg border border-pink-200 w-full max-w-md text-center">
    <h1 class="text-3xl font-extrabold mb-4 text-pink-600">Set up Two-Factor Authentication</h1>
    <p class="text-gray-700 mb-6">Scan this QR code with your authenticator app, then enter the code below.</p>

    <div class="flex justify-center mb-6">
      <%= image_tag "https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=#{CGI.escape(@mfa_url)}",
                    alt: "MFA QR Code", class: "border border-pink-300 p-2 rounded-lg shadow" %>
    </div>

    <%= form_with url: setup_mfa_path, method: :post, local: true do |f| %>
      <%= f.text_field :otp,
                       placeholder: "Enter OTP",
                       class: "w-full mb-4 border border-pink-300 rounded-md p-3
                    focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>

      <%= f.submit "Verify",
                   class: "w-full bg-pink-500 text-white py-2 rounded-lg shadow hover:bg-pink-600 transition" %>
    <% end %>
  </div>
</div>
