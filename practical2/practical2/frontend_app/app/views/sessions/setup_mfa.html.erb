<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded shadow-md w-full max-w-md text-center">
    <h1 class="text-2xl font-bold mb-4">Set up Two-Factor Authentication</h1>
    <p class="text-gray-600 mb-6">Scan this QR code with your authenticator app, then enter the code below.</p>

    <div class="flex justify-center mb-6">
      <%= image_tag "https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=#{CGI.escape(@mfa_url)}",
                    alt: "MFA QR Code", class: "border p-2 rounded" %>
    </div>

    <%= form_with url: setup_mfa_path, method: :post, local: true do |f| %>
      <%= f.text_field :otp, placeholder: "Enter OTP", class: "w-full mb-4 border rounded p-2" %>
      <%= f.submit "Verify", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
    <% end %>
  </div>
</div>
