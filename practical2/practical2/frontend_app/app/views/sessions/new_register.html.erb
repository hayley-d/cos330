<div class="min-h-screen flex">
  <div class="hidden md:flex w-1/2">
    <%= image_tag "login-bg.jpg", class: "object-cover w-full h-full" %>
  </div>

  <div class="flex w-full md:w-1/2 items-center justify-center bg-pink-50">
    <div class="bg-white p-8 rounded-2xl shadow-lg border border-pink-200 w-96">
      <h1 class="text-3xl font-extrabold mb-6 text-pink-600 text-center">Register</h1>

      <%= form_with url: register_path, method: :post, local: true do |f| %>
        <%= f.text_field :first_name, placeholder: "First Name",
                         class: "w-full mb-4 border border-pink-300 rounded-md p-3 focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>

        <%= f.text_field :last_name, placeholder: "Last Name",
                         class: "w-full mb-4 border border-pink-300 rounded-md p-3 focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>

        <%= f.email_field :email, placeholder: "Email",
                          class: "w-full mb-4 border border-pink-300 rounded-md p-3 focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>

        <%= f.password_field :password, placeholder: "Password",
                             class: "w-full mb-6 border border-pink-300 rounded-md p-3 focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>

        <%= f.submit "Sign Up",
                     class: "w-full bg-pink-500 text-white py-2 rounded-lg shadow hover:bg-pink-600 transition" %>
      <% end %>

      <p class="mt-4 text-sm text-center text-gray-700">
        Already have an account?
        <%= link_to "Login", login_path, class: "text-pink-600 hover:underline" %>
      </p>
    </div>
  </div>
</div>
