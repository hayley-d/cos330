<div class="min-h-screen flex items-center justify-center bg-pink-50">
  <div class="bg-white p-8 rounded-2xl shadow-lg border border-pink-200 w-full max-w-md">
    <h1 class="text-3xl font-extrabold mb-6 text-pink-600 text-center">Enter OTP</h1>

    <%= form_with url: otp_path, method: :post, local: true do |f| %>
      <div class="mb-5">
        <%= f.label :otp, "One-Time Password", class: "block text-sm font-semibold text-pink-700 mb-1" %>
        <%= f.text_field :otp,
                         class: "mt-1 block w-full border border-pink-300 rounded-md p-3
                      focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>
      </div>

      <%= f.submit "Verify",
                   class: "w-full bg-pink-500 text-white py-2 rounded-lg shadow hover:bg-pink-600 transition" %>
    <% end %>
  </div>
</div>
