<div class="max-w-lg mx-auto mt-12 bg-pink-50 p-8 rounded-2xl shadow-lg border border-pink-200">
  <h1 class="text-3xl font-extrabold mb-6 text-pink-600 text-center">Create New Confidential file</h1>

  <%= form_with url: confidential_index_path, method: :post, local: true, multipart: true do |f| %>
    <div class="mb-5">
      <%= f.label :file_name, "File Name", class: "block text-sm font-semibold text-pink-700 mb-1" %>
      <%= f.text_field :file_name,
                       class: "mt-1 block w-full border border-pink-300 rounded-md p-3 focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white" %>
    </div>

    <div class="mb-5">
      <%= f.label :description, "Description", class: "block text-sm font-semibold text-pink-700 mb-1" %>
      <%= f.text_area :description,
                      class: "mt-1 block w-full border border-pink-300 rounded-md p-3 focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white", rows: 4 %>
    </div>

    <div class="mb-5">
      <%= f.label :content, "Confidential Content", class: "block text-sm font-semibold text-pink-700 mb-1" %>
      <%= f.text_area :content,
                      class: "mt-1 block w-full border border-pink-300 rounded-md p-3
                         focus:ring-2 focus:ring-pink-400 focus:border-pink-400 bg-white",
                      rows: 6 %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Upload Confidential file",
                   class: "bg-pink-500 text-white px-6 py-2 rounded-lg shadow hover:bg-pink-600 transition" %>
    </div>
  <% end %>
</div>
