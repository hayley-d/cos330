<div class="p-6 bg-pink-50 min-h-screen">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-extrabold text-pink-600">Documents</h1>
    <div class="flex space-x-3">
      <%= link_to home_path,
                  class: "bg-pink-100 text-pink-700 px-4 py-2 rounded-lg shadow hover:bg-pink-200 flex items-center space-x-2 transition" do %>
        <i class="fas fa-arrow-left"></i>
        <span>Back</span>
      <% end %>

      <%= link_to new_document_path,
                  class: "bg-pink-500 text-white px-4 py-2 rounded-lg shadow hover:bg-pink-600 flex items-center space-x-2 transition" do %>
        <i class="fas fa-plus"></i>
        <span>New Document</span>
      <% end %>
    </div>
  </div>

  <% if @documents.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @documents.each do |img| %>
        <% if img["asset_id"].present? %>
          <div class="bg-white shadow-md rounded-xl p-5 border border-pink-200 hover:shadow-lg transition">
            <h2 class="text-lg font-bold text-pink-700"><%= img["file_name"] %></h2>
            <p class="text-gray-600 mt-1"><%= img["description"] %></p>

            <div class="flex space-x-5 mt-4 text-sm font-medium">
              <%= link_to "Edit", edit_document_path(img["asset_id"]),
                          class: "text-blue-600 hover:text-blue-800 transition" %>

              <%= link_to "Download", download_document_path(img["asset_id"]),
                          class: "text-pink-500 hover:text-pink-700 transition" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 text-center italic">No documents found.</p>
  <% end %>
</div>
