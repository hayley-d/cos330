<div class="min-h-screen flex flex-col bg-pink-50">
  <!-- Navbar -->
  <nav class="bg-white shadow-md border-b border-pink-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <!-- App Name -->
          <div class="shrink-0 flex items-center text-2xl font-extrabold text-pink-600">
            MyApp
          </div>

          <!-- Nav Links -->
          <div class="hidden sm:flex sm:space-x-8 sm:ml-10">
            <%= link_to "Documents", documents_path,
                        class: "inline-flex items-center px-1 pt-1 text-gray-700 hover:text-pink-600 transition" %>
            <%= link_to "Images", images_path,
                        class: "inline-flex items-center px-1 pt-1 text-gray-700 hover:text-pink-600 transition" %>
            <%= link_to "Confidential", confidential_index_path,
                        class: "inline-flex items-center px-1 pt-1 text-gray-700 hover:text-pink-600 transition" %>
            <%= link_to "Roles", roles_path,
                        class: "inline-flex items-center px-1 pt-1 text-gray-700 hover:text-pink-600 transition" %>
          </div>
        </div>

        <!-- Logout Button -->
        <div class="flex items-center">
          <%= button_to "Logout", logout_path, method: :delete,
                        class: "bg-pink-500 text-white px-4 py-2 rounded-lg shadow hover:bg-pink-600 transition" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1 p-8">
    <h1 class="text-3xl font-extrabold text-pink-700 text-center">Welcome to your dashboard!</h1>
    <p class="mt-3 text-gray-600 text-center">Use the navigation above to explore your resources.</p>

    <div class="mt-8 flex justify-center">
      <%= image_tag "meme.png", class: "w-40 h-40 object-contain rounded-xl border-4 border-pink-200 shadow-md" %>
    </div>
  </main>
</div>
