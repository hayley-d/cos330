<div class="min-h-screen flex flex-col bg-gray-100">
  <!-- Navbar -->
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex">
          <div class="shrink-0 flex items-center text-xl font-bold text-blue-600">
            MyApp
          </div>
          <div class="hidden sm:flex sm:space-x-8 sm:ml-10">
            <%= link_to "Documents", documents_path, class: "inline-flex items-center px-1 pt-1 text-gray-700 hover:text-blue-600" %>
            <%= link_to "Images", images_path, class: "inline-flex items-center px-1 pt-1 text-gray-700 hover:text-blue-600" %>
            <%= link_to "Confidential", confidential_index_path, class: "inline-flex items-center px-1 pt-1 text-gray-700 hover:text-blue-600" %>
            <%= link_to "Roles", roles_path, class: "inline-flex items-center px-1 pt-1 text-gray-700 hover:text-blue-600" %>
          </div>
        </div>
        <div class="flex items-center">
          <%= button_to "Logout", logout_path, method: :delete, class: "bg-red-600 text-white px-3 py-1 rounded hover:bg-red-700" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="flex-1 p-6">
    <h1 class="text-3xl font-bold text-gray-800">Welcome to your dashboard!</h1>
    <p class="mt-2 text-gray-600">Use the navigation above to explore your resources.</p>
    <%= image_tag "meme.png", class: "w-32 h-32 object-contain mx-auto" %>
  </main>
</div>
