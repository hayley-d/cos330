<div class="max-w-lg mx-auto mt-10 bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold mb-6">Edit Image</h1>

  <%= form_with model: @asset_id, url: image_path(@asset_id), method: :patch, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :file_name, "File Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :file_name, value: @image[:file_name] || "", class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, value: @image[:description] || "", class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Save Changes", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
