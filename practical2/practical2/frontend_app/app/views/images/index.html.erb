<div class="p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Images</h1>
    <div class="flex space-x-3">
      <%= link_to home_path,
                  class: "bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300 flex items-center space-x-2" do %>
        <i class="fas fa-arrow-left"></i>
        <span>Back</span>
      <% end %>

      <%= link_to new_image_path,
                  class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 flex items-center space-x-2" do %>
        <i class="fas fa-plus"></i>
        <span>New Image</span>
      <% end %>
    </div>
  </div>

  <% if @images.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @images.each do |img| %>
        <% if img["asset_id"].present? %>
          <div class="bg-white shadow rounded p-4">
            <h2 class="text-lg font-semibold"><%= img["file_name"] %></h2>
            <p class="text-gray-600"><%= img["description"] %></p>
            <div class="flex space-x-4 mt-4">
              <%= link_to edit_image_path(img["asset_id"]),
                          class: "text-yellow-600 hover:text-yellow-800",
                          title: "Edit" do %>
                <i class="fas fa-edit"></i>
              <% end %>

              <%= link_to download_image_path(img["asset_id"]),
                          class: "text-green-600 hover:text-green-800",
                          title: "Download" do %>
                <i class="fas fa-download"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No images found.</p>
  <% end %>
</div>
