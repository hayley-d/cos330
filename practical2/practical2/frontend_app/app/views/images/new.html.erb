<div class="max-w-lg mx-auto mt-10 bg-white p-6 rounded shadow">
  <h1 class="text-2xl font-bold mb-6">Upload New Image</h1>

  <%= form_with url: images_path, method: :post, local: true, multipart: true do |f| %>
    <div class="mb-4">
      <%= f.label :file_name, "File Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :file_name, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :file, "Choose Image File", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :file, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Upload Image", class: "bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" %>
    </div>
  <% end %>
</div>
