  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/stimulus-webpack-helpers": "^1.0.1",
    "@hotwired/turbo-rails": "^8.0.16",
    "chart.js": "^4.5.0",
    "chartkick": "^5.0.1"
  }
}
